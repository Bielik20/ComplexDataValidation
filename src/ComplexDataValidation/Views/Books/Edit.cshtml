@model ComplexDataValidation.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Book</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="PersonId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="PersonId" class="form-control" asp-items="ViewBag.PersonID"></select>
                <span asp-validation-for="PersonId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Submited" />
                    <label asp-for="Submited"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-area="" asp-controller="People" asp-action="Details" asp-route-id="@Model.PersonId">Back to Person</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model ComplexDataValidation.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h2>Book</h2>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="dl-horizontal"></dl>
</div>

<div class="panel-group" id="accordion">
    <div class="panel panel-default">
        <div class="panel panel-default">
            <div class="panel-heading row" style="background:#ebebb0;">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">
                    <h3 class="panel-title col-xs-9 col-sm-10 noselect">
                        Latest Book Information
                    </h3>
                </a>
            </div>

            <div id="collapse3" class="panel-collapse collapse">
                <div class="panel-body">
                    @Html.EditorFor(model => model.Information)
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-controller="People" asp-action="Details" asp-route-id="@Model.PersonId">Back to Person</a>
</div>

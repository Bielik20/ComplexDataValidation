@using ComplexDataValidation.Models.Enums;
@model ComplexDataValidation.Models.Pet

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Pet</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="PersonID" value=@ViewData["PersonID"] />
        <div class="form-group">
            <label asp-for="Kind" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Kind" asp-items="Html.GetEnumSelectList<KindEnum>()" class="form-control"></select>
                <span asp-validation-for="Kind" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Submited" />
                    <label asp-for="Submited"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-area="" asp-controller="People" asp-action="Details" asp-route-id="@ViewData["PersonID"]">Back to Person</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
